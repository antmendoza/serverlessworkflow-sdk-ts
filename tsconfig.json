{
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./spec/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
